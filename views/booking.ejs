    <div style="margin-top: 30px;" class="card shadow mb-5 bg-white rounded">
       
        <!--Card-Body-->
        <div class="card-body">
    
            <!--Card-Title-->
            <p class="card-title text-center shadow mb-3 rounded">Book Your Flight</p>
     
     <div class="icons text-center">
    
    <i class="fa fa-plane fa-2x" aria-hidden="true"></i>
   
    
    
     </div>
    
        <hr>
    
           <form action="/addtravel" method="post">
    
            <!--First Row-->
            <div class="row">
                <div class="col-sm-6">
                <input required type="text" class="form-control mb-4" placeholder="First Name" name="fname" id="">
            </div>
    
                
            
            <div class="col-sm-6">
                <input required type="text"  class="form-control datepicker mb-4" placeholder="Last Name" name="lname" id="">
            </div>
    
                
            </div>
           
           
    
            <!--Second Row-->
           
    
            <!--Third Row-->
            <div class="row">
    
                <div class="col-sm-6">
                    <input required type="Number"  class="form-control datepicker mb-4" placeholder="Age" name="age" id="">
                </div>
                
                <div class="col-sm-6">
                    <input required type="email"  class="form-control datepicker mb-4" placeholder="Email" name="email" id="">
                </div>
                    
    
                    </div>
    <input type="hidden" name="idvalue" value="<%=flightid%>">
    
                    <div class="row mt-3">
    
                        <label class="radiobtn"><input required type="radio" name="gender" value="Male">Male</label>
                        <label class="radiobtn"><input required type="radio" name="gender" value="Female">Female</label>
            
                    </div>
                   <div style=" display: flex; float: right;">
                    <div style="margin-right: 20px; float: right;">
                    <button style="width: 150px; height: 38px; float: right;" type="submit" class="btn btn-primary float-right mt-5">Add Traveller</button>
                </div>
                <%if(traveller!=''){%>
                    <div style="margin-left: 20px;">
                        <a aria-disabled="false"  href="/bookflight/<%=flightid%>" class="btn btn-primary float-right mt-5">Book Flight</a>
                    </div>
                <%} else{%>
                    <div style="margin-left: 20px;">
                        <a style="pointer-events: none;"  href="/bookflight/<%=flightid%>" class="btn btn-primary float-right mt-5">Book Flight</a>
                    </div>
                <%}%>
               
            </div>
            </form>
                </div>
