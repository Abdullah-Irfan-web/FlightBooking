    <% if(traveller!=''){%>
        <div>
            <h3 style="margin-left: 30px; margin-top: 30px;">Traveller Details</h3>
            <%traveller.forEach((travel)=>{%>
                <div style="width: 50%;  margin-top: 10px; margin-bottom: 20px; display: flex;justify-content: space-between;margin-left: 30px; margin-right: 30px; ">
                    <div>
                        <p><%=travel.firstname%></p>
