    <div class="total-flight">
        <%flightdata.forEach((flight)=>{%>
            <div class="flight-div">
                <div class="flight-no">
                    <span><p style="font-size: 20px;"> <%=flight.flightname%></p></span>
                           </div>
                
                <div class="flight-detail">
                    <div class="fliname">
                        <span> <p style="font-size: 30px;"><%=flight.airlines%></p></span>
                  
                        <span style="margin-right: 30px;"> <a class="btn btn-primary float-right" href="/booking/<%=flight.id%>">Book</a> </span>
        
                    </div>
                   
                    <div class="flidet">
                        <div>
                           <p style="font-size: 30px;"><%=flight.source%></p> </div>
