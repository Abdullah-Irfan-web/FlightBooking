    <p  class="card-title text-center shadow mb-3 rounded">Flight Details</p>

   </div>
   <%if(flightdata!==""){%>
    <div style="margin-top: 50px;">
        <p  class="card-title text-center shadow mb-3 rounded">No Flight Found</p>
    
